generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Certificate {
  id                String  @id @default(uuid())
  fullName          String
  email             String?
  certificateNumber String  @unique
  qrData            String? // Text to be displayed on the QR code

  issuedAt DateTime @default(now())

  emailSentAt DateTime?
  emailStatus String?   @default("PENDING") // e.g., SUCCESS, FAILED, PENDING
  emailError  String?
}
