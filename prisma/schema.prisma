generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          String @id @default(uuid())
  templateUrl String
  nameX       Int
  nameY       Int
  qrX         Int
  qrY         Int
  qrSize      Int    @default(200)
  fontSize    Int
  fontFamily  String
  fontWeight  String @default("600")
  fontColor   String @default("#000000")

  certificates Certificate[]
}

model Certificate {
  id                String  @id @default(uuid())
  fullName          String
  email             String?
  certificateNumber String  @unique

  templateId String
  template   Template @relation(fields: [templateId], references: [id])

  imageUrl String
  pdfUrl   String
  issuedAt DateTime @default(now())
}
